        </Style>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.DataContext>
        <Binding Mode="OneWay" Path="Main" Source="{StaticResource Locator}"/>
    </Controls:MetroWindow.DataContext>
    <Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource Locator}}">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Background.png" 
                        ViewportUnits="Absolute"
                        Viewport="0,0,100,100"
                        AlignmentX="Left"
                        AlignmentY="Top"
                        TileMode="Tile" Stretch="None"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#B2544CFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image HorizontalAlignment="Left" Source="Assets/icon.png" Margin="5" Opacity="0.75"/>
            <TextBlock Text="Afterburn" FontFamily="/Afterburn;component/Assets/#Oswald" FontSize="32" Foreground="White" Grid.Column="1" Margin="0,-4,0,0"/>

            <Button x:Name="button" Grid.Column="6"  Style="{DynamicResource NoHoverButtonStyle}" Opacity="0.75" Margin="5">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ei:ChangePropertyAction TargetName="flyout" PropertyName="IsOpen" Value="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Image Source="Assets/Settings.png"/>
            </Button>
            <Button Style="{DynamicResource NoHoverButtonStyle}" Grid.Column="5" Width="41" Opacity="0.75" Margin="5" Command="{Binding Main.SaveCommand}">
                <Image Source="Assets/Save.png"/>
            </Button>
            <Button Grid.Column="4"  Style="{DynamicResource NoHoverButtonStyle}" Opacity="0.75" Margin="5" Command="{Binding Main.LoadCommand}">
                <Image Source="Assets/Open.png" Margin="0"/>
            </Button>
            <Button Grid.Column="3"  Style="{DynamicResource NoHoverButtonStyle}" Opacity="0.75" Margin="5" Command="{Binding Main.NewCommand}">
                <Image Source="Assets/New.png" Margin="0,0,5,0"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Controls:MetroAnimatedTabControl Margin="5" SelectedIndex="{Binding Main.SelectedTabIndex}">
                <Controls:MetroTabItem Header="Estimate &amp; Tracking"
                                       DataContext="{Binding Main, Source={StaticResource Locator}}">
                    <Grid Margin="0,10,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="HeaderGrid" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=itemsControl}" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Top" Grid.Column="0" Foreground="#FF464646" Text="Feature" TextTrimming="CharacterEllipsis" FontWeight="Bold" Margin="0"/>
                            <TextBlock VerticalAlignment="Top" Grid.Column="1" Foreground="#FF464646" Text="Task" TextTrimming="CharacterEllipsis" FontWeight="Bold" Margin="0"/>
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Foreground="#FF464646" Text="Hours" TextTrimming="CharacterEllipsis" FontWeight="Bold" Margin="0" Grid.ColumnSpan="2"/>
                        </Grid>
                        <Canvas Margin="40,0,10,0">
                            <Grid x:Name="HeaderGrid_Copy" Canvas.Left="{Binding ActualWidth, ElementName=itemsControl}" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                                <ItemsControl ItemsSource="{Binding Tasks[0].Updates}" ItemTemplate="{DynamicResource TaskUpdateDatesTemplate}" VerticalContentAlignment="Bottom">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </Grid>

                        </Canvas>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid x:Name="DetailsGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="10,0,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="DetailsColumn" Width="Auto" MinWidth="400" />
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition x:Name="UpdatesColumn" Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel >
                                    <ItemsControl x:Name="itemsControl" ItemsSource="{Binding Tasks}" ItemTemplate="{DynamicResource TaskEstimateTemplate}" VerticalAlignment="Top" Margin="0,5,5,0"/>
                                    <Button VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0" BorderThickness="0" Style="{DynamicResource NoHoverButtonStyle}" Width="32" Height="32" Margin="-5,0,0,5" 
                                            Command="{Binding AddTaskCommand}" >
                                        <Button.Background>
                                            <ImageBrush ImageSource="Assets/Add.png" Stretch="None">
                                                <ImageBrush.RelativeTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.8" ScaleY="0.8"/>
                                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                        <RotateTransform CenterY="0.5" CenterX="0.5"/>
                                                        <TranslateTransform/>
                                                    </TransformGroup>
                                                </ImageBrush.RelativeTransform>
                                            </ImageBrush>
                                        </Button.Background>
                                    </Button>
                                    <Grid x:Name="grid" Margin="0,0,5,10" ClipToBounds="True">
                                        <TextBox HorizontalAlignment="Stretch" TextWrapping="NoWrap" VerticalAlignment="Stretch" Width="Auto" BorderThickness="0" Padding="0" Background="#3FFFFFFF" IsEnabled="False" IsUndoEnabled="False" Text="Other Tasks &amp; Distractions" TextAlignment="Center" BorderBrush="{x:Null}"/>
                                    </Grid>
                                    <Grid x:Name="grid_Copy2" Margin="0,0,5,10" ClipToBounds="True">
                                        <TextBox HorizontalAlignment="Stretch" TextWrapping="NoWrap" VerticalAlignment="Stretch" Width="Auto" BorderThickness="0" Padding="0" Background="#3FFFFFFF" IsEnabled="False" IsUndoEnabled="False" Text="Total Worked" TextAlignment="Center" BorderBrush="{x:Null}" />
                                    </Grid>
                                    <Grid Margin="0,0,5,10" ClipToBounds="True">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="70"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox HorizontalAlignment="Stretch" TextWrapping="NoWrap" VerticalAlignment="Stretch" Width="Auto" Margin="0,0,5,0" BorderThickness="0" Padding="0" Background="#3FFFFFFF" IsEnabled="False" IsUndoEnabled="False" Text="Total Remaining" TextAlignment="Center" BorderBrush="{x:Null}"/>
                                        <TextBox HorizontalAlignment="Stretch" TextWrapping="NoWrap" VerticalAlignment="Stretch" Width="Auto" BorderThickness="0" Padding="0" Background="#3FFFFFFF" IsEnabled="False" IsUndoEnabled="False" Text="{Binding TotalEstimatedHours}" TextAlignment="Center" Grid.Column="1" BorderBrush="{x:Null}"/>
                                    </Grid>
                                    <Grid x:Name="grid_Copy1" Margin="0,0,5,10" ClipToBounds="True"/>
                                </StackPanel>
                                <GridSplitter HorizontalAlignment="Stretch" Grid.Column="1" Margin="5,0" Width="5" Background="#3F5BAFDE"/>
                                <DockPanel Grid.Column="2" Margin="5,5,0,0">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                        <ItemsControl x:Name="itemsControl1" HorizontalAlignment="Left" 
                                                      VerticalAlignment="Top" 
                                                      FontSize="16" Foreground="#FF464646" 
                                                      ItemsSource="{Binding Tasks}" ItemTemplate="{DynamicResource TaskUpdatesTemplate}"/>
                                        <ItemsControl x:Name="itemsControl1_Copy" 
                                                      FontSize="16" Foreground="#FF464646" 
                                                      ItemsSource="{Binding  Analysis.Distractions.Updates}" 
                                                      ItemTemplate="{DynamicResource TaskUpdateTemplate}" 
                                                      VerticalAlignment="Top" Margin="0,37,0,0" 
                                                      HorizontalAlignment="Left" IsHitTestVisible="False">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                        <ItemsControl x:Name="itemsControl1_Copy4" 
                                                      FontSize="16" Foreground="#FF464646" 
                                                      ItemsSource="{Binding Analysis.TotalWorked.Updates}" 
                                                      ItemTemplate="{DynamicResource TaskUpdateTemplate}" 
                                                      VerticalAlignment="Top" Margin="0,10,0,0" HorizontalAlignment="Left" IsHitTestVisible="False">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                        <ItemsControl x:Name="itemsControl1_Copy1" 
                                                      FontSize="16" Foreground="#FF464646" 
                                                      ItemsSource="{Binding Analysis.RemainingHours.Updates}" 
                                                      ItemTemplate="{DynamicResource TaskUpdateTemplate}" VerticalAlignment="Top" Margin="0,10,0,0" HorizontalAlignment="Left" IsHitTestVisible="False">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                    <Button 
                                        HorizontalAlignment="Left" VerticalAlignment="Top" 
                                        Style="{DynamicResource NoHoverButtonStyle}" Height="32"
                                        Width="32" Margin="0,-5,0,0" Command="{Binding AddDayCommand}">
                                        <Button.Background>
                                            <ImageBrush ImageSource="Assets/Add.png"/>
                                        </Button.Background>
                                    </Button>
                                </DockPanel>
                            </Grid>

                        </ScrollViewer>

                    </Grid>

                </Controls:MetroTabItem>
                <Controls:MetroTabItem 
                    Header="Analysis" Visibility="{Binding Main.AnalysisVisibility}">
                    <Grid DataContext="{Binding Main.Analysis}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.618*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.681*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <dvc:Chart UseLayoutRounding="False" Style="{DynamicResource ChartStyle}" BorderThickness="0" Grid.ColumnSpan="2" Margin="0,0,20,10">
                            <dvc:Chart.Axes>
                                <dvc:CategoryAxis FontSize="16" Opacity="0.6" Orientation="X"/>
                                <dvc:LinearAxis FontSize="16" Opacity="0.6" Orientation="Y"/>
                            </dvc:Chart.Axes>
                            <dvc:Chart.Palette>
                                <dv:ResourceDictionaryCollection>
                                    <ResourceDictionary>
                                        <Style x:Key="DataPointStyle" TargetType="Control">
                                            <Setter Property="Background" Value="LightGray"/>
                                        </Style>
                                    </ResourceDictionary>
                                    <ResourceDictionary>
                                        <Style x:Key="DataPointStyle" TargetType="Control">
                                            <Setter Property="Background" Value="#FFB6B63F"/>
                                        </Style>
                                    </ResourceDictionary>
                                    <ResourceDictionary>
                                        <Style x:Key="DataPointStyle" TargetType="Control">
                                            <Setter Property="Background" Value="Black"/>
                                        </Style>
                                    </ResourceDictionary>
                                </dv:ResourceDictionaryCollection>
                            </dvc:Chart.Palette>
                            <dvc:LineSeries Title="Average Path"
                                            IndependentValueBinding="{Binding DateString}"
                                            DependentValueBinding="{Binding Hours}" 
                                            ItemsSource="{Binding AnalysisAverageExtrapolation.Updates}" LegendItemStyle="{DynamicResource LegendItemStyle}"/>

                            <dvc:LineSeries Title="Expected Progress"
                                            IndependentValueBinding="{Binding DateString}"
                                            DependentValueBinding="{Binding Hours}" 
                                            ItemsSource="{Binding AnalysisProjectedTotal.Updates}" Background="#FF37C329" LegendItemStyle="{DynamicResource LegendItemStyle}"/>
                            <dvc:LineSeries Title="Remaining Hours"
                                            IndependentValueBinding="{Binding DateString}"
                                            DependentValueBinding="{Binding Hours}" 
                                            ItemsSource="{Binding AnalysisRemainingHours.Updates}" LegendItemStyle="{DynamicResource LegendItemStyle}"/>
                        </dvc:Chart>
                        <dvc:Chart UseLayoutRounding="False"
                                   Style="{DynamicResource ChartStyle}" BorderThickness="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,20,0">
                            <dvc:Chart.Axes>
                                <dvc:CategoryAxis FontSize="16" Opacity="0.6" Orientation="X"/>
                                <dvc:LinearAxis FontSize="16" Opacity="0.6" Orientation="Y"/>
                            </dvc:Chart.Axes>
                            <dvc:Chart.Palette>
                                <dv:ResourceDictionaryCollection>
                                    <ResourceDictionary>
                                        <Style x:Key="DataPointStyle" TargetType="Control">
                                            <Setter Property="Background" Value="Green"/>
                                        </Style>
                                    </ResourceDictionary>
                                    <ResourceDictionary>
                                        <Style x:Key="DataPointStyle" TargetType="Control">
                                            <Setter Property="Background" Value="Red"/>
                                        </Style>
                                    </ResourceDictionary>
                                </dv:ResourceDictionaryCollection>
                            </dvc:Chart.Palette>

                            <dvc:AreaSeries Title="Hours Worked"
                        		IndependentValueBinding="{Binding DateString}"
                        		DependentValueBinding="{Binding Hours}" 
                        		ItemsSource="{Binding AnalysisTotalWorked.Updates}" Background="#FF32A232" LegendItemStyle="{DynamicResource LegendItemStyle}">
                                <!--<dvc:AreaSeries.Style>
                                    <Style TargetType="Control">
                                        <Setter Property="Background" Value="Pink" />
                                    </Style>
                                </dvc:AreaSeries.Style>-->
                            </dvc:AreaSeries>
                            <dvc:AreaSeries Title="Distractions"
                        		IndependentValueBinding="{Binding DateString}"
                        		DependentValueBinding="{Binding Hours}" 
                        		ItemsSource="{Binding AnalysisDistractions.Updates}" LegendItemStyle="{DynamicResource LegendItemStyle}" Background="#FFB03D3D"/>
                        </dvc:Chart>
                    </Grid>

                </Controls:MetroTabItem>
            </Controls:MetroAnimatedTabControl>
        </Grid>

        <Controls:Flyout x:Name="flyout" Header="Settings" Position="Right" Width="200" Grid.RowSpan="5" Theme="Light" d:IsHidden="True">
            <StackPanel Orientation="Vertical" Margin="10,0">
                <TextBlock TextWrapping="Wrap" Text="Hours Per Day"/>
                <Controls:NumericUpDown Minimum = "1" Maximum = "12" Interval = "0.5" VerticalAlignment="Top" Value="{Binding Main.HoursPerDay}" Margin="0,0,0,10"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock TextWrapping="Wrap" Text="Skip Weekends"/>
                    <Controls:ToggleSwitch IsChecked="{Binding Main.SkipWeekends}" />
                </StackPanel>
            </StackPanel>
        </Controls:Flyout>
    </Grid>
</Controls:MetroWindow>
